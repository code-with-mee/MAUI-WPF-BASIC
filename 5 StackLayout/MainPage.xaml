<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_5_StackLayout.MainPage">

    <StackLayout VerticalOptions="Center"
                 Margin="30"
                 Spacing="10">
        <BoxView HorizontalOptions="Center"
                 VerticalOptions="Center"
                 WidthRequest="600"
                 HeightRequest="50"
                 Background="Red"/>
        <BoxView HorizontalOptions="Center"
                 VerticalOptions="Center"
                 WidthRequest="600"
                 HeightRequest="50"
                 Background="Blue"/>
        <BoxView HorizontalOptions="Center"
                 VerticalOptions="Center"
                 WidthRequest="600"
                 HeightRequest="50"
                 Background="Green"/>
        <BoxView HorizontalOptions="Center"
                 VerticalOptions="Center"
                 WidthRequest="600"
                 HeightRequest="50"
                 Background="Yellow"/>

    </StackLayout>

</ContentPage>

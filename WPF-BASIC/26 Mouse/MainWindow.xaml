<Window x:Class="_26_Mouse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_26_Mouse"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center">
        <TextBlock Text="default" Name="txtInformation" FontSize="30" Width="200" TextAlignment="Center"/>
        <Rectangle Fill="CadetBlue" Width="400" Height="300"
                   MouseEnter="Rectangle_MouseEnter"
                   MouseLeave="Rectangle_MouseLeave"
                   MouseMove="Rectangle_MouseMove"
                   MouseDown="Rectangle_MouseDown"
                   />
    </StackPanel>
</Window>

<Window x:Class="_16_RadioButton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_16_RadioButton"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="50">
            <RadioButton x:Name="rdApprove" 
                         Content="Approve"
                         GroupName="promote"
                         Checked="rdApprove_Checked"
                         Unchecked="rdApprove_Unchecked"
                         />
            <RadioButton x:Name="rdReject" 
             Content="Reject"
             GroupName="promote"       
             Checked="rdReject_Checked"
             Unchecked="rdReject_Unchecked"
            />
        </StackPanel>
    </Grid>
</Window>

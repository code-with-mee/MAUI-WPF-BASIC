<Window x:Class="_12_ListBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_12_ListBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox Name="lb" 
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Width="200"
                 Height="250"
                 SelectionChanged="lb_SelectionChanged"
                 >
            <ListBoxItem Content="C++ Programming"/>
            <ListBoxItem Content="Java Programming"/>
            <ListBoxItem Content="C# Programming"/>
            <ListBoxItem Content="Python Programming"/>
        </ListBox>
    </Grid>
</Window>

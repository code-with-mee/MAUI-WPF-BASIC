<Window x:Class="_4_DemoShape.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4_DemoShape"
        mc:Ignorable="d"
          Title="Basic Shapes" Height="450" Width="800">
    <Grid>
        <Canvas Name="MyCanvas">
            <!-- Draw a rectangle -->
            <Rectangle Width="200" Height="100" Fill="Red" Stroke="Black" StrokeThickness="2" Canvas.Left="50" Canvas.Top="50"/>

            <!-- Draw a square -->
            <Rectangle Width="100" Height="100" Fill="Green" Stroke="Black" StrokeThickness="2" Canvas.Left="300" Canvas.Top="50"/>

            <!-- Draw a circle -->
            <Ellipse Width="100" Height="100" Fill="Blue" Stroke="Black" StrokeThickness="2" Canvas.Left="50" Canvas.Top="200"/>

            <!-- Draw a triangle -->
            <Polygon Points="400,200 450,300 350,300" Fill="Yellow" Stroke="Black" StrokeThickness="2"/>

            <!-- Draw an ellipse -->
            <Ellipse Width="150" Height="100" Fill="Blue" Stroke="Black" StrokeThickness="2" Canvas.Right="50" Canvas.Bottom="50"/>

        </Canvas>
    </Grid>
</Window>

<Window x:Class="DemoFace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoFace"
        mc:Ignorable="d"
        Title="Human Face" Height="400" Width="400">
    <Canvas Background="LightGray">
        <!-- Face Outline -->
        <Ellipse Canvas.Left="50" Canvas.Top="50" Width="300" Height="300" Fill="PeachPuff" Stroke="Black" StrokeThickness="2" />

        <!-- Left Eye -->
        <Ellipse Canvas.Left="120" Canvas.Top="120" Width="50" Height="50" Fill="White" Stroke="Black" StrokeThickness="2" />
        <Ellipse Canvas.Left="140" Canvas.Top="140" Width="20" Height="20" Fill="Black" />

        <!-- Right Eye -->
        <Ellipse Canvas.Left="230" Canvas.Top="120" Width="50" Height="50" Fill="White" Stroke="Black" StrokeThickness="2" />
        <Ellipse Canvas.Left="250" Canvas.Top="140" Width="20" Height="20" Fill="Black" />

        <!-- Nose -->
        <Path Data="M 190,190 L 200,230 L 180,230 Z" Fill="PeachPuff" Stroke="Black" StrokeThickness="2" />

        <!-- Mouth -->
        <Path Data="M 120,260 C 160,310 240,310 280,260" Stroke="Black" StrokeThickness="3" Fill="Transparent" />

        <!-- Left Eyebrow -->
        <Path Data="M 110,100 C 130,80 160,80 180,100" Stroke="Black" StrokeThickness="3" Fill="Transparent" />

        <!-- Right Eyebrow -->
        <Path Data="M 220,100 C 240,80 270,80 290,100" Stroke="Black" StrokeThickness="3" Fill="Transparent" />
    </Canvas>
</Window>

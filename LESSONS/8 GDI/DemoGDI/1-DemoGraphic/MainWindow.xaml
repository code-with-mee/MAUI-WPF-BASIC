<Window x:Class="_1_DemoGraphic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1_DemoGraphic"
        mc:Ignorable="d"
        Title="WPF Graphics Example" Height="400" Width="600">
    <Canvas Background="LightGray">
        <!-- Rectangle -->
        <Rectangle Canvas.Left="50" Canvas.Top="50" Width="100" Height="50" 
                   Stroke="Black" StrokeThickness="2" Fill="Blue" />

        <!-- Ellipse -->
        <Ellipse Canvas.Left="200" Canvas.Top="50" Width="100" Height="50" 
                 Stroke="Green" StrokeThickness="3" Fill="Yellow" />

        <!-- Line -->
        <Line X1="50" Y1="150" X2="150" Y2="200" 
              Stroke="Red" StrokeThickness="2" />

        <!-- Polygon (Triangle) -->
        <Polygon Points="300,100 350,150 250,150" 
                 Stroke="Purple" StrokeThickness="2" Fill="Pink" />

        <!-- Path -->
        <Path Stroke="Black" StrokeThickness="2" Fill="LightBlue" 
              Data="M 400,50 L 450,100 L 350,100 Z" />
    </Canvas>
</Window>

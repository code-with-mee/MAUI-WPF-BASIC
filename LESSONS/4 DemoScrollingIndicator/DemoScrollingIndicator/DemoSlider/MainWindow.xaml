<Window x:Class="DemoSlider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoSlider"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Slider Name="sdProgress" Width="200" Height="25" Minimum="0" Maximum="100" Value="50" HorizontalAlignment="Center" VerticalAlignment="Center" ValueChanged="sdProgress_ValueChanged" />

        <TextBlock Name="tbInformation" Text="Value : 50" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>
    </Grid>
</Window>

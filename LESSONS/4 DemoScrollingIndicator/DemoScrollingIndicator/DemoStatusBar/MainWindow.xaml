<Window x:Class="DemoStatusBar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoStatusBar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Name="tbInformation" Text="status bar information"/>
            </StatusBarItem>
            <StatusBarItem>
                <Separator Width="10" />
            </StatusBarItem>
            <StatusBarItem>
                <ProgressBar Width="100" Height="16" Value="50" />
            </StatusBarItem>
        </StatusBar>
        <Grid>
            <TextBlock Text="Main Content Area" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Grid>
    </DockPanel>
</Window>
